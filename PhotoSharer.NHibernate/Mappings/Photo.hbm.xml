<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" default-lazy="true" assembly="PhotoSharer.Business" namespace="PhotoSharer.Business.Entities">
  <class name="Photo" dynamic-update="true" >
    <cache usage="read-write"/>

    <id name="Id" column="PhotoId" type="guid">
      <generator class="guid" />
    </id>

    <property name="Description" not-null="false"/>
    <property name="Source" not-null="true"/>
    <property name="ExternalId" not-null="true"/>
    <property name="Link" not-null="true" />

    <many-to-one name="User" class="AppUser" column="UserId" not-null="true" cascade="save-update" />

  </class>
</hibernate-mapping>
