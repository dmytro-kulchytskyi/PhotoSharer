<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" default-lazy="true" assembly="PhotoSharer.Business" namespace="PhotoSharer.Business.Entities">
  <class name="AppGroup" dynamic-update="true" >
    <cache usage="read-write"/>

    <id name="Id" column="GroupId" type="guid">
      <generator class="guid" />
    </id>

    <property name="Name" not-null="true" />
    <property name="InviteCode" not-null="true" />
    <property name="Url" not-null="true" />
    <property name="CreatorId" not-null="true" />


    <bag name="Users" table="User_Group"  cascade="save-update" >
      <key column="GroupId"/>
      <many-to-many class="AppUser" column="UserId"/>
    </bag>

  </class>
</hibernate-mapping>

