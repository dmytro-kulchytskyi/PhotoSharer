<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true"  assembly="PhotoSharer.Business" namespace="PhotoSharer.Business.Entities">
  <class name="AppUser" dynamic-update="true" >
    <cache usage="read-write"/>
    
    <id name="Id" column="UserId" type="guid">
      <generator class="guid" />
    </id>
    
    <property name="UserName" not-null="false" />

    <bag name="Groups" table="User_Group" cascade="save-update" lazy="true">
      <key column="UserId"/>
      <many-to-many class="AppGroup" column="GroupId" />
    </bag>

    <bag name="Logins" inverse="true" lazy="true" >
      <key column="UserId"/>
      <one-to-many class="Login"/>
    </bag>
    
  </class>
</hibernate-mapping>
