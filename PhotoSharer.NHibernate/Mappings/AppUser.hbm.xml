<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true"  assembly="PhotoSharer.Business" namespace="PhotoSharer.Business.Entities">
  <class name="AppUser" table="AppUsers" dynamic-update="true" >
    <cache usage="read-write"/>
    
    <id name="Id" column="UserId" type="guid" />
    
    <property name="UserName" not-null="false" />
    <property name ="LoginProvider" unique-key="userProviderInfo" not-null="true" />
    <property name ="ProviderKey" unique-key="userProviderInfo" not-null="true" />

    <bag name="Groups" table="GroupMembers" cascade="save-update" lazy="true">
      <key column="UserId"/>
      <many-to-many class="AppGroup" column="GroupId" />
    </bag>
  </class>
</hibernate-mapping>
