@model IList<PhotoSharer.MVC.ViewModels.Groups.GroupListPageItemViewModel>
@{
    ViewBag.Title = "Own Groups";
}

<h2>@ViewBag.Title</h2>
<ul class="nav nav-pills">
    <li role="presentation">@Html.RouteLink("My groups", "MyGroups")</li>
    <li role="presentation" class="active">@Html.ActionLink("Own Groups", "OwnGroups")</li>
</ul>
<hr />
@if (Model.Count == 0)
{
    <p>No groups.</p>
}
else
{
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table table-hover" id="table">
                <tbody>
                    @foreach (var group in Model)
                    {
                        <tr>
                            <td>@Html.RouteLink(group.Name, "GroupDetails", new { id = group.Id, link = group.Name })</td>
                            <td>
                                <p>@Url.RouteUrl("GroupDetails", new { id = group.Id, link = group.Name }, Request.Url.Scheme)</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}




