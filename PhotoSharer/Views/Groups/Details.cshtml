@model GroupViewModel
@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>

<div>
    <div>
        @if (!Model.IsMember)
        {
            using (Html.BeginForm("JoinGroup", "Groups", new { groupId = Model.Id, groupLink = Model.Name }))
            {
                @Html.AntiForgeryToken()
                <input type="submit" value="Join Group" class="btn btn-success" />
            }
        }
        else
        {
            <div>
                @Html.RouteLink("Photostreams management", "MyPhotoStreams", new { id = Model.Id, link = Model.Name }, new { @class = "btn btn-success" })
            </div>
            <br />
            using (Html.BeginForm("LeaveGroup", "Groups", new { groupId = Model.Id, groupLink = Model.Name }))
            {
                @Html.AntiForgeryToken()
                <div>
                    <input type="submit" value="Leave Group" class="btn btn-danger" />
                </div>
            }
        }
    </div>
    <br />
    <div>
        @Html.RouteLink("Back to List", "MyGroups")
    </div>
</div>